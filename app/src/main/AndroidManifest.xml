<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.ait.stephen.recmoviesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- android:theme="@style/AppTheme" -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/film_reel1"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleMovie"
            android:label="@string/title_activity_get_movie"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QueryTitles"
            android:label="@string/title_activity_query_movies"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QueryGenres"
            android:label="@string/title_activity_query_genres"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowMovieData"
            android:label="@string/title_activity_show_movie_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".model.RowLayout"
            android:label="@string/title_activity_row_layout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListMoviesActivity"
            android:label="@string/title_activity_list_movies"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RatedMovieList"
            android:label="@string/title_activity_rated_movie_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecommendMovie"
            android:label="@string/title_activity_recommend__movie"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".model.example"
            android:label="@string/title_activity_example"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
