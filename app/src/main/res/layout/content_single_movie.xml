<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/imgblue"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ie.ait.stephen.recmoviesapp.SingleMovie"
    tools:showIn="@layout/activity_single_movie">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/movieText"
        android:text="Pick your Movie"
        android:textSize="45sp"
        android:textColor="#ffff00"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterText"
        android:layout_below="@+id/movieText"
        android:layout_marginTop="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter movie title"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/querySingleMovie"
        android:text="Choose"
        android:textSize="30sp"
        android:layout_below="@+id/enterText"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        android:onClick="onButtonClick"/>

</RelativeLayout>
